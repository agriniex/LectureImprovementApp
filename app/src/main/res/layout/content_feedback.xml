<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dators.lectureimprovementapp.activities.MainActivity"
    >

    <TextView
        android:text="@string/feedback_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/feedback_label"
        android:textSize="24sp" />

    <TextView
        android:text="@string/feedback_label_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_label"
        android:layout_alignParentStart="true"
        android:id="@+id/label_info"
        android:textSize="14sp" />

    <Button
        android:text="Iesniegt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_feedback_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/feedback_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:maxLines="10"
        android:id="@+id/feedback_text"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/lecture_rating"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Papildu komentāri:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_additional_comments"
        android:layout_below="@+id/lecture_rating"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lecture_rating"
        android:numStars="5"
        android:layout_below="@+id/label_info"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
